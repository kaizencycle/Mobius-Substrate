{
  "name": "dva-lite-api",
  "version": "0.1.0",
  "description": "DVA.LITE observability and GI early-warning service for the Mobius stack",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:frontend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "dev": "tsx watch src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "node dist/index.js",
    "clean": "rm -rf dist frontend/.next",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.2",
    "axios": "^1.6.0",
    "eslint-config-next": "14.2.35",
    "ethers": "6.16.0",
    "express": "^4.18.0",
    "next": "14.2.35",
    "prom-client": "^15.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
