{
  "name": "encyclopedia-api",
  "version": "0.1.0",
  "description": "Mobius Encyclopedia API service for canonical civic answers",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:frontend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "dev": "tsx watch src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "node dist/index.js",
    "clean": "rm -rf dist frontend/.next",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.10",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.1"
  }
}
