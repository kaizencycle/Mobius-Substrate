# Thought Broker API Configuration

# Server Port
PORT=4005

# API Authentication (comma-separated list of valid API keys)
VALID_API_KEYS=dev-key-1,dev-key-2,prod-key-xyz

# Environment
NODE_ENV=production

# General Integrity (GI) / MII Configuration
GI_MIN=0.95

# URIEL Sentinel Configuration
SENTINEL_URIEL_WEIGHT=0.20

# Antigravity Node Integration (SXI - Software Operator Intelligence)
ANTIGRAVITY_ENABLED=false
ANTIGRAVITY_URL=http://localhost:12000
ANTIGRAVITY_API_KEY=
ANTIGRAVITY_TIMEOUT_MS=20000

# =============================================================================
# MEMT (Multi-Engine Model Taxonomy) Configuration
# =============================================================================

# OpenAI / GPT Configuration (ACI - Architect-Class Intelligence)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com
OPENAI_ROUTER_MODEL=o4-mini
OPENAI_MAX_TOKENS=1024
OPENAI_TEMPERATURE=0.2
OPENAI_TIMEOUT_MS=25000

# Claude / Anthropic Configuration (ENI - Engineer-Class Intelligence)
CLAUDE_API_KEY=
CLAUDE_BASE_URL=https://api.anthropic.com
CLAUDE_ROUTER_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=1024
CLAUDE_TEMPERATURE=0.2
CLAUDE_TIMEOUT_MS=25000

# DeepSeek Configuration (OEI - Optimization Engine Intelligence)
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-coder
DEEPSEEK_MAX_TOKENS=1024
DEEPSEEK_TIMEOUT_MS=25000

# ECHO Layer Configuration (MSI - Memory-State Intelligence)
ECHO_LAYER_ENABLED=true
ECHO_BASE_URL=http://localhost:7004
ECHO_API_KEY=
ECHO_TIMEOUT_MS=5000

# Civic Ledger Configuration
LEDGER_BASE_URL=http://localhost:7005
LEDGER_API_KEY=
LEDGER_TIMEOUT_MS=15000
LEDGER_ATTEST_URL=http://localhost:7005/ledger/attest

# Sentinel Consensus Configuration
SENTINEL_CONSENSUS_URL=
SENTINEL_CONSENSUS_TIMEOUT_MS=30000

# =============================================================================
# DVA Tier Configuration
# =============================================================================

# Default DVA tier (LITE, ONE, FULL, HIVE)
DVA_DEFAULT_TIER=ONE

# GI Thresholds by tier
DVA_LITE_GI_THRESHOLD=0.90
DVA_ONE_GI_THRESHOLD=0.93
DVA_FULL_GI_THRESHOLD=0.95
DVA_HIVE_GI_THRESHOLD=0.98

# Consensus settings
DVA_FULL_CONSENSUS_REQUIRED=true
DVA_HIVE_HUMAN_REVIEW_CRITICAL=true

# Engine weights for consensus calculation
DVA_CONSENSUS_WEIGHT_ACI=0.25
DVA_CONSENSUS_WEIGHT_ENI=0.35
DVA_CONSENSUS_WEIGHT_SXI=0.15
DVA_CONSENSUS_WEIGHT_OEI=0.15
DVA_CONSENSUS_WEIGHT_MSI=0.10

# =============================================================================
# Integrity Tier Configuration
# =============================================================================

INTEGRITY_TIER_ENABLED=true
INTEGRITY_TIER_URL=http://localhost:7003
