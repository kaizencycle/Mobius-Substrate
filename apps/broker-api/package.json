    "@noble/hashes": "^1.3.3",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "drizzle-orm": "^0.29.1",
    "eslint-config-next": "16.1.1",
