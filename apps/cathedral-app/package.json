{
  "name": "cathedral-app",
  "version": "1.0.0",
  "description": "Cathedral - Governance and policy management interface for Mobius Systems",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:frontend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "dev": "tsc --watch && node dist/index.js",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "node dist/index.js",
    "clean": "rm -rf dist frontend/.next",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "@civic/sdk": "*",
    "@civic/ui-kit": "*",
    "express": "^4.18.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0"
  }
}


