{
  "title": "Mobius Ops Console",
  "uid": "mobius-ops",
  "schemaVersion": 38,
  "version": 1,
  "time": { "from": "now-24h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Global Integrity (MII)",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        { "expr": "mobius_mii_current", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 3,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 0.95 },
              { "color": "green", "value": 0.98 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Alerts (24h)",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "increase(mobius_alert_total[24h])",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 }
    },
    {
      "type": "bargauge",
      "title": "Decisions (24h)",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (decision) (increase(mobius_deliberation_total[24h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        },
        "overrides": []
      },
      "options": { "displayMode": "gradient", "orientation": "horizontal" },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Engine Latency",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum by (le, engine_id) (rate(mobius_engine_latency_ms_bucket[5m])))",
          "refId": "A",
          "legendFormat": "{{engine_id}} p50"
        },
        {
          "expr": "histogram_quantile(0.9, sum by (le, engine_id) (rate(mobius_engine_latency_ms_bucket[5m])))",
          "refId": "B",
          "legendFormat": "{{engine_id}} p90"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ms", "decimals": 0 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 6 }
    },
    {
      "type": "timeseries",
      "title": "MII vs Threshold",
      "id": 5,
      "datasource": "Prometheus",
      "targets": [
        { "expr": "mobius_mii_current", "refId": "A", "legendFormat": "MII" },
        { "expr": "mobius_mii_threshold", "refId": "B", "legendFormat": "Threshold" }
      ],
      "fieldConfig": {
        "defaults": { "unit": "none", "decimals": 3 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 15 }
    }
  ]
}
