{
  "version": "0.1",
  "name": "Kaizen UI Tokens",
  "colors": {
    "bg": "#0A0A0F",
    "text": "#F5F8FF",
    "pulseBlue": "#2A9EF7",
    "fractalCyan": "#40E0D0",
    "entropyAmber": "#FFB347",
    "dvaViolet": "#A86CFF",
    "gold": "#E8C86D",
    "danger": "#FF5757"
  },
  "semantic": {
    "gi_good": "{colors.pulseBlue}",
    "gi_warning": "{colors.entropyAmber}",
    "gi_critical": "{colors.danger}",
    "cycle_active": "{colors.dvaViolet}",
    "cycle_end": "{colors.gold}"
  },
  "typography": {
    "fontPrimary": "Inter Tight, Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif",
    "fontSecondary": "Space Grotesk, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif",
    "scale": {
      "h1": 40,
      "h2": 28,
      "h3": 22,
      "body": 16,
      "small": 14
    }
  },
  "radius": {
    "sm": 6,
    "md": 10,
    "lg": 16,
    "xl": 24
  },
  "shadow": {
    "soft": "0 6px 20px rgba(0,0,0,0.25)",
    "glow": "0 0 24px rgba(64,224,208,0.45)"
  }
}

